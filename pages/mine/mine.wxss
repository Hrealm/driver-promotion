/* pages/mine/mine.wxss */

.header_view{
  background:#64AF7B;
  width: 100%;
  height:100px;
  display:flex; 
  flex-direction:row;
  justify-content: center;
}

.item_line{
  background:#F2F3F7;
  text-align: left;
  width: 100%;
  height:10px;
}

.header_label_view{
  display:flex; 
  flex-direction:column;
  height:100%;
  width:50%;
  justify-content: center;
  align-items: center;
}

.button{
  height:40px;
  color: #FFFFFF;
  border:1px solid #FFFFFF;
  border-radius: 5px;
  border-width: 1px;
  border-color: #FFFFFF;
  background-color: #64AF7B;
  font-size: medium;
  font-weight: 300;
}

.header_label{
  text-align: center;
  width: 100%;
  height:30px;
  color: #FFFFFF;
}

.bottom_item_label{
  text-align: center;
  width: 100%;
  height:40px;
  background-color: #FFFFFF;
  font-weight: 300;
}

.item_tip{
  font: 18px arial;
  color: #999999;
  line-height: 20px;
  margin-bottom: 10px;
  font-size: small;
}

.item_tip_detail{
  font: 18px arial;
  color: #999999;
  line-height: 20px;
}

.add-wrap{
  position:fixed;
  display: flex;
  bottom:0px;
  width:100%;
  justify-content: center;
}

.bottom_btn{
  width: 200px;
  height: 40px;
  margin-bottom: 30px;
  border-radius: 5px;
  justify-content: center;
  font-size: normal;
  display: flex;
  align-items: center;
}