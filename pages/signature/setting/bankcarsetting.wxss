/* pages/signature/setting/bankcarsetting.wxss */
@import "../../../utils/weui.wxss";
.item_container{
  display:flex; 
  flex-direction:row;
  margin-top: 1px;
  height:50px;
  background-color: #FFFFFF;
}

.itemr_view{
  width: 100%;
  height:50px;
  display:flex; 
  border-radius: 5px;
  border-width: 1px;
  flex-direction:row;
  align-items: center;
}

.image_right{
  width: 30px;
  height: 30px;
  opacity: 0.8;
  margin-right: 10px;
  margin-top: 10px;
}

.bank_name_label{
  font: normal;
  font-size: 30rpx;
  color: #333333;
  margin-left: 10px;
  width: 70px;
  text-align: left;
}

.bank_detail_label{
  font: normal;
  font-size: 35rpx;
  color: #333333;
  text-align: left;
}

.input{
  font-size: 35rpx; 
}

.add-wrap{
  position:fixed;
  display: flex;
  bottom:0px;
  width:100%;
  justify-content: center;
}

.bottom_btn{
  width: 200px;
  height: 40px;
  margin-bottom: 20px;
  color:#11cd6e;
  background-color: #f2f2f7;
  border-radius: 5px;
  justify-content: center;
  font-size: normal;
  display: flex;
  align-items: center;
}