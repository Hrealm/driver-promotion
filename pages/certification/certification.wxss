/* pages/certification/certification.wxss */

.container {
  background-color: #F0F0F0;
  padding: 0;
  min-height: 100vh;
  /* align-items: flex-start; */
}

.personal_info{
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  text-align: center;
}

.ic_title{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 105rpx;
  color: #435C95;
}

.w_img{
  margin-top: 15rpx;
}

.idCardImg{
  width: 500rpx;
  height: 300rpx;
}

.imgTip{
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 80rpx;
  color: #435C95;
}

.w_input{
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 30rpx 0;

}

.name_input{
  width: 500rpx;
  height: 70rpx;
  border: 1rpx solid #DCDCDC;
  font-size: 28rpx;
}

.v_imgs{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.vehicleImg{
  width: 350rpx;
  height: 220rpx;
}

.v_inputs{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 20rpx;
}

.v_input{
  width: 345rpx;
  height: 70rpx;
}

._newAdd{
  padding-top: 0rpx;
  padding-bottom: 30rpx;
}

.lpc_picker{
  position: relative;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #DCDCDC;
  margin: 25rpx;
  padding: 15rpx 10rpx;
  font-size: 28rpx;
}

.lp_color_value{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  color: #DCDCDC;
}

.lpc_value{
  color: #000;
}

.btn-area{
  box-sizing:border-box;
  width: 100%;
  padding: 0 25rpx;
  background-color: #fff;
}

.tp_tip{
  display: block;
  font-size: 26rpx;
  color: red;
  margin-bottom: 30rpx;
}
