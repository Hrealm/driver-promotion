page {
  background: #333c4d;
  width: 100%;
  height: 100%;
  padding: 0;
}

button[plain]{border:0}

.shareButton {
  width:280rpx;
  height:80rpx;
  background-image: linear-gradient(#41a0ff,#1774d3);
  color: white;
  font-size: 40rpx;
  font-weight:300;
  border-radius: 45rpx; 
  line-height: 80rpx;
  text-align: center;
  position:fixed;
  bottom:1rpx;
  left:25%;
  align-items:center;
  justify-content:center;
  display:flex;
  z-index: 99;
  transform:translate(-50%,-50%);
}

.shareButton::after {
  border-radius: 45rpx;
  border: 0,solid, white; 
}

.shareToFriends {
  background-image: linear-gradient(#ffa900,#fd5805);
  color: white;
  border-radius: 45rpx; 
  line-height: 80rpx;
  text-align: center;
  position:fixed;
  bottom:1rpx;
  left:75%;
  align-items:center;
  justify-content:center;
  display:flex;
  transform:translate(-50%,-50%);
}

.shareToFriends::after {
  border-radius: 45rpx;
  border: 0,solid, white; 
}

.image{
  width: 100%;
  height: 85%;
  margin: 0 auto;
  position:absolute;
  background: #333c4d;
}

.rules {
  width:200rpx;
  height:50rpx;
  line-height: 50rpx;
  border-radius: 10rpx; 
  font-size:30rpx;
  background-image: linear-gradient(#ffa900,#fd5805);
  color: white;
  text-align: center;
  position:fixed;
  top:20rpx;
  left:15%;
  align-items:center;
  justify-content:center;
  display:flex;
}